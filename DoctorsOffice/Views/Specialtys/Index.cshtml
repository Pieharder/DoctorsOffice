@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Specialty>;

<H1>Specialty</H1>
@if (@Model.Count == 0)
{
  <h3>No Specities have been added yet!</h3>
} 
@foreach (Specialty specialty in Model)
{
  <li>@Html.ActionLink($"{specialty.SpecialtyName}", "Details", new { id = specialty.SpecialtyId })</li>
}

<p>@Html.ActionLink("Add new Specialty", "Create", "Specialtys", null, new { @class = "btn btn-outline-success btn-large" })</p>