@{
  Layout = "_Layout";
}
@using DoctorsOffice.Models;
@model List<DoctorsOffice.Models.Doctor>;
<h1>Doctors</h1>
@if (@Model.Count == 0)
{
  <h3>No doctors have been added yet!</h3>
} 
@foreach (Doctor doctor in Model)
{
  <li>Dr @Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })</li>
}
<p>@Html.ActionLink("Add new doctor", "Create", "Doctors", null, new { @class = "btn btn-outline-success btn-large" })</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-outline-info btn-sm" })</p>
