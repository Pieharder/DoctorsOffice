@{
  Layout = "_layout";
}

@model DoctorsOffice.Models.Doctor;

<h2 class="text-center">Doctor Details</h2>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@* <h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3> *@



@if (@Model.Patients.Count == 0)
{
  <p>This Doctor has no Patients</p>
  <a href="/patients/create"><button class="btn btn-success">Add Patients Now</button></a>
}
else 
{
  <ul>
  @foreach(var join in Model.Patients)
  {
    <li>@join.Patient.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to doctors", "Index", "Doctors", null, new { @class = "btn btn-outline-info btn-sm" })</p>
<p>@Html.ActionLink("Edit Doctor", "Edit", new { id = Model.DoctorId }, new { @class = "btn btn-outline-warning btn-sm" })</p>
<p>@Html.ActionLink("Delete Doctor", "Delete", new { id = Model.DoctorId }, new { @class = "btn btn-outline-danger btn-sm" })</p>